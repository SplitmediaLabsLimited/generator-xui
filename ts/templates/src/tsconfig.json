{
    "version": "1.5.0-alpha",
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "../js",
        "out": "main.js"
    },
    "compileOnSave": false,
    "filesGlob": [
        "./../bower_components/**/*.ts",
        "./**/*.ts"
    ],
    "files": [
        "./main.ts"
    ]
}
